<Window x:Class="GiftkoederRadar.ProgressDialogWithTimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiftkoederRadar"
        mc:Ignorable="d"
        Height="120" Width="450">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>
		<Label x:Name="lblCurrentOperation" Grid.Row="0" Margin="30,0,30,0"></Label>
		<!--2.2.12. Progressbar-->
		<ProgressBar x:Name="pbProgress" Grid.Row="1" Margin="30,0,30,0"></ProgressBar>
		<Label x:Name="lblRemainingTime" Grid.Row="2" Margin="30,0,30,0"></Label>
	</Grid>
</Window>
